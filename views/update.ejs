            </form>

        </figure>
    </div>

    <script>
        let form = document.getElementsByClassName("update-form")[0]
        form.addEventListener("submit", function (e) {
            e.preventDefault();
            let productName = form.productName.value
            let image = form.image.value
            let from = form.from.value
            let nutrients = form.nutrients.value
            let quantity = form.quantity.value
            let price = form.price.value
            let description = form.description.value
            let organic = form.organic.checked
            if (productName === "" || image === "" || from === "" || nutrients === "" || quantity === "" || price === "" || description === "") {
                document.getElementById("title").innerHTML = "ðŸ¥¦Invalid InputðŸŒ½"
            }
            else {
