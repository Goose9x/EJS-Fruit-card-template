        <figure class="card">

            <form method="POST" action="" class="update-form">

                <div class="input-wrapper">

                    <input class="input" type="text" name="productName" value="{{productName}}"
                        placeholder="Product Name">

                </div>

                <div class="input-wrapper">

                    <input class="input" type="text" name="image" value="{{image}}" placeholder="Image">

                </div>

                <div class="input-wrapper">

                    <input class="input" type="text" name="from" value="{{from}}" placeholder="Country">

                </div>

                <div class="input-wrapper">

