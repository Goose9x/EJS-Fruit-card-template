                    <input class="input" type="text" name="price" value="{{price}}" placeholder="Price">

                </div>

                <div class="input-wrapper">

                    <input class="input" type="text" name="description" value="{{description}}"
                        placeholder="Product Name">

                </div>

                <div class="input-wrapper checkbox">

                    <label for="">

                        Organic

                    </label>

                    <input name="organic" type="checkbox" checked="{{organic}}" />

